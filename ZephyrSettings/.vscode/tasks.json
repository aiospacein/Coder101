{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-pegdbserver",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.vscode/start_gdbserver.ps1"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".*"
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "PEGDBServer",
          "endsPattern": "started on port"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "stop-pegdbserver",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.vscode/stop_pegdbserver.ps1"
      ],
      "problemMatcher": []
    }
  ]
}